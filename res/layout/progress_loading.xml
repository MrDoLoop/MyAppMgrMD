<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingBottom="8dp"
    android:orientation="vertical" >

    <com.doloop.www.myappmgr.material.widgets.ArcProgress
        android:id="@+id/arc_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:arc_bottom_text_size="15sp"
        app:arc_finished_color="@color/theme_blue_light"
		app:arc_angle="270.0"
		app:arc_suffix_text="%"
		app:arc_suffix_text_padding="6dp"
        app:arc_text_color="@color/theme_blue_light"
        app:arc_unfinished_color="#96214193" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        
        android:textSize="18sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:text="" />

</LinearLayout>