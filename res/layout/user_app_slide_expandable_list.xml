<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windows_bg" >

    <com.doloop.slideexpandable.library.ActionSlideExpandableListView
        android:id="@android:id/list"
        android:paddingTop="5dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/transparent"
        android:dividerHeight="0dp"
        android:fadingEdgeLength="0dp"
        android:fastScrollEnabled="false"
        android:listSelector="@color/transparent"
        android:smoothScrollbar="true" />

     <ImageView
        android:id="@+id/emptyView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_folder_blue"
        android:visibility="gone" />

    <!-- <include android:id="@+id/emptyView" layout="@layout/list_empty_view" /> -->

   <TextView
        android:id="@+id/centralPopTextView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_rectangle_shape_poptxt_blue"
        android:gravity="center"
        android:text="A"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold"
        android:visibility="invisible" />
    
     <TextView
        android:id="@+id/topPopTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_rectangle_shape_poptxt_blue"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:text="A"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>